# Environment Variables for Hyundai Sales Management Application

# ========================================
# BACKEND ENVIRONMENT VARIABLES
# ========================================

# Database Configuration (Spring Boot)
SPRING_DATASOURCE_HOST=localhost
SPRING_DATASOURCE_PORT=3306
SPRING_DATASOURCE_DB=hyundai_sales_db
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=password

# MySQL Database Configuration (Direct)
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=hyundai_sales_db
MYSQL_USER=user
MYSQL_PASSWORD=password

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Spring Profiles
SPRING_PROFILES_ACTIVE=local

# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================

# API Configuration for Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:8082
API_URL=http://localhost:8082

# ========================================
# DOCKER ENVIRONMENT VARIABLES
# ========================================

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=hyundai-sales

# ========================================
# KUBERNETES ENVIRONMENT VARIABLES
# ========================================

# K8s Configuration (for production deployment)
K8S_MYSQL_HOST=mysql.default.svc.cluster.local
K8S_CORS_ALLOWED_ORIGINS=https://hyundai-sales.local

# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================

# Production URLs
PROD_CORS_ALLOWED_ORIGINS=http://hyundai-sales.marouanedbibih.engineer
PROD_API_URL=https://api.hyundai-sales.local

# ========================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ========================================

# Local Development Configuration
DEV_MYSQL_PORT=3360
DEV_API_PORT=8082
DEV_FRONTEND_PORT=3000

# ========================================
# CI/CD ENVIRONMENT VARIABLES (for reference)
# ========================================

# Jenkins Configuration (these would be set in Jenkins)
# BACKEND_FOLDER=backend
# FRONTEND_FOLDER=frontend
# SCANNER_HOME=/opt/sonar-scanner

# ========================================
# SECURITY ENVIRONMENT VARIABLES
# ========================================

# Default password for initial users (development only)
DEFAULT_USER_PASSWORD=password

# ========================================
# DOCKER BUILD ARGUMENTS
# ========================================

# Build arguments for Docker images
BUILD_NEXT_PUBLIC_API_URL=http://localhost:8083